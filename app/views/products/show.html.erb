<div class="top">
<h1>Product: <%= @product.name %></h1>
<h3>Cost: $<%= @product.cost %></h3>
<h3>Country of Origin: <%= @product.origin%></h3>
</div>

<% if @product.reviews.any? %>
  <h4>Click on a buyer's name to read their review:</h4>
  <% @product.reviews.each do |review| %>
    <ul>
      <li><%= link_to review.author, product_review_path(@product, review) %></li>
    </ul>
  <% end %>
<% else %>
  <p>No reviews for this product... Be the first to leave a review!</p>
<% end %>

<% if current_user || current_user.admin %>
  <p><%= link_to "Add a Review!", new_product_review_path(@product) %></p>
  <p><%= link_to "Return to products", products_path %></p>
<% end %>

<% if current_user.admin %>
  <p><%= link_to "Edit Product", edit_product_path(@product) %></p>
  <p><%= link_to "Delete Product", product_path(@product),
                            :data => {:confirm => "Are you sure?",
                                      :method => "Delete"} %></p>
<% end %>

